{
  "name": "sveltesse-webext",
  "displayName": "[name]",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "description": "[description]",
  "scripts": {
    "clear": "pnpm rimraf extension/dist extension/manifest.json extension.*",
    "dev": "pnpm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "pnpm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "pnpm vite build",
    "build:js": "pnpm vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "pnpm crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "pnpm web-ext run --target=chromium --start-url chrome://extensions/",
    "start:firefox": "pnpm web-ext run --target=firefox-desktop --start-url about:debugging#/runtime/this-firefox",
    "lint": "pnpm eslint ./src/",
    "test": "pnpm vitest test",
    "test:coverage": "pnpm vitest run --coverage"
  },
  "webExt": {
    "verbose": false,
    "sourceDir": "./extension",
    "run": {
      "keepProfileChanges": true,
      "devtools": true,
      "firefoxPreview": ["mv3"]
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.27.0",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/svelte": "^3.0.0",
    "@sveltejs/vite-plugin-svelte": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.9",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@unocss/reset": "^0.45.30",
    "@vitest/coverage-c8": "^0.24.5",
    "@vitest/ui": "^0.24.5",
    "c8": "^7.12.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.27.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.2",
    "kolorist": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "svelte": "^3.52.0",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.8.4",
    "unocss": "^0.45.30",
    "unplugin-auto-import": "^0.11.4",
    "unplugin-icons": "^0.14.13",
    "vite": "^3.2.2",
    "vitest": "^0.24.5",
    "web-ext": "^7.3.1",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.10.0"
  }
}
